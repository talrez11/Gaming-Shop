<document>
	<a href="url_Make('category','shop',array('name',$params['text_id']),array('id',$params['id']))"
		class="(isset($_REQUEST['category']) ? $_REQUEST['category'] : $_REQUEST['name']) == $params['text_id'] ? 'active ' .$params['text_id'] : $params['text_id']" 
		cms:eval="href"
		 cms:optional="class" 
	 	>
		<svg class="$params['text_id']" cms:eval="class" >
			<use 
				href="'#icon-'.$params['text_id']" 
				xlink:href="'#icon-'.$params['text_id']" 
				cms:eval="href,xlink:href"
			/>	
		</svg>
		<cms:var param="description" multilanguage="yes"/>
	</a>
</document>
